<resources>

    <style name="Theme.GroupFinder" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="android:textAppearanceSmallPopupMenu">@style/PopupMenuTextAppearanceSmall</item>
        <item name="android:textAppearanceLargePopupMenu">@style/PopupMenuTextAppearanceLarge</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/background</item>
    </style>

    <style name="PopupMenuTextAppearanceSmall" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PopupMenuTextAppearanceLarge" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="navigationItemTextAppearance">
        <item name="android:textColor">@color/group_default_tagged_nickname</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nanum_square_kr</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/tag_bottom_sheet_background</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
</resources>