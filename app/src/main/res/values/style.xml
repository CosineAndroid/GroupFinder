<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--게시글 디테일 : activity_detail-->
    <style name="textView_Title" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/nanum_square_kr</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textView_id" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/nanum_square_kr</item>
        <item name="android:textColor">@color/group_default_tagged_nickname</item>
    </style>

    <style name="textView_explanation" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/nanum_square_kr</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">11sp</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:lines">3</item>
    </style>

    <style name="textView_select" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/nanum_square_kr</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">17.3sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="tag" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/nanum_square_kr</item>
        <item name="android:textColor">@color/white</item>
